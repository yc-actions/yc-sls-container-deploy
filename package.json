{
  "name": "yc-actions-yc-sls-container-deploy",
  "version": "2.5.0",
  "description": "GitHub Action to deploy Serverless Container to Yandex Cloud",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier src/**/*.ts -w",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "GITHUB_WORKSPACE=__tests__ jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-sls-container-deploy.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "serverless containers",
    "deploy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@yandex-cloud/nodejs-sdk": "^2.7.2",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.12",
    "@swc/jest": "^0.2.36",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prefer-arrow-functions": "^3.3.2",
    "eslint-plugin-unicorn": "^52.0.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.4"
  }
}
