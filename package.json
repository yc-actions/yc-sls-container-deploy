{
  "name": "yc-actions-yc-sls-container-deploy",
  "version": "3.0.0",
  "description": "GitHub Action to deploy Serverless Container to Yandex Cloud",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier src/**/*.ts -w",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "GITHUB_WORKSPACE=__tests__ jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-sls-container-deploy.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "serverless containers",
    "deploy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@yandex-cloud/nodejs-sdk": "^2.9.0",
    "yaml": "^2.7.1",
    "axios": "^1.9.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.24",
    "@swc/jest": "^0.2.38",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.26.0",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prefer-arrow-functions": "^3.6.2",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  }
}
