{
  "name": "yc-actions-yc-sls-container-deploy",
  "version": "2.3.0",
  "description": "GitHub Action to deploy Serverless Container to Yandex Cloud",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier src/**/*.ts -w",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "GITHUB_WORKSPACE=__tests__ jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-sls-container-deploy.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "serverless containers",
    "deploy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@yandex-cloud/nodejs-sdk": "^2.4.9",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.72",
    "@swc/jest": "^0.2.27",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.3.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.46.0",
    "eslint-plugin-github": "^4.9.2",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "eslint-plugin-unicorn": "^48.0.0",
    "jest": "^29.6.1",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
