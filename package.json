{
    "name": "yandex-cloud-serverless-container-deploy",
    "version": "3.0.0",
    "description": "GitHub Action to deploy Serverless Container to Yandex Cloud",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "lint": "eslint src/**/*.ts",
        "format": "prettier src/**/*.ts -w",
        "package": "ncc build --source-map --license licenses.txt",
        "test": "GITHUB_WORKSPACE=__tests__ jest",
        "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
        "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/chezzyderp/yc-sls-container-deploy.git"
    },
    "keywords": [
        "actions",
        "yandex cloud",
        "serverless containers",
        "deploy"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.11.1",
        "@actions/github": "^6.0.1",
        "@yandex-cloud/nodejs-sdk": "^2.9.0",
        "yaml": "^2.8.0",
        "axios": "^1.10.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.30.1",
        "@stylistic/eslint-plugin-ts": "^4.4.1",
        "@swc/cli": "^0.7.8",
        "@swc/core": "^1.12.14",
        "@swc/jest": "^0.2.38",
        "@types/node": "^24.0.10",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.36.0",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^9.31.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-github": "^6.0.0",
        "eslint-plugin-jest": "^29.0.1",
        "eslint-plugin-prefer-arrow-functions": "^3.6.2",
        "eslint-plugin-unicorn": "^60.0.0",
        "globals": "^16.3.0",
        "jest": "^30.0.4",
        "js-yaml": "^4.1.0",
        "ts-jest": "^29.4.0",
        "typescript": "^5.8.3"
    }
}
